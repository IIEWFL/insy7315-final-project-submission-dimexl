<?xml version="1.0" encoding="utf-8"?>
<!--Angga Risky. “Modern UI Design Using LinearLayout in Android Studio Tutorial.” YouTube, 6 Oct. 2017, www.youtube.com/watch?v=rmNnCs2X-Ko. Accessed 4 Nov. 2025.-->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/glass_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/textBookingName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Guest Name"
                android:textColor="@color/glass_text_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textBookingStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:textColor="@color/warning"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/status_badge"
                android:padding="4dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textBookingEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email@example.com"
                android:textColor="@color/glass_text_secondary"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/textBookingPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+27 123 456 789"
                android:textColor="@color/glass_text_secondary"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textBookingDates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check-in: - Check-out: -"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/textBookingGuests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 guest(s)"
                android:textColor="@color/glass_text_secondary"
            android:textSize="12sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/textBookingDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submitted: Jan 01, 2025"
                android:textColor="@color/glass_text_secondary"
            android:textSize="12sp"
            android:layout_marginBottom="16dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm"
                android:textColor="@color/white"
                android:backgroundTint="@color/success"
                android:layout_marginEnd="4dp"
                style="@style/Widget.Material3.Button"
                android:visibility="gone" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonDecline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Decline"
                android:textColor="@color/warning"
                android:layout_marginEnd="4dp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:strokeColor="@color/warning"
                android:visibility="gone" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textColor="@color/destructive"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:strokeColor="@color/destructive" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>

