<?xml version="1.0" encoding="utf-8"?>
<!--Angga Risky. “Modern UI Design Using LinearLayout in Android Studio Tutorial.” YouTube, 6 Oct. 2017, www.youtube.com/watch?v=rmNnCs2X-Ko. Accessed 4 Nov. 2025.-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Video View for splash video -->
    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:keepScreenOn="true" />

    <!-- Fallback image/logo if video doesn't load -->
    <ImageView
        android:id="@+id/imageFallback"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/logo"
        android:contentDescription="App Logo"
        android:scaleType="centerInside"
        android:visibility="gone" />

    <!-- App Name Text with fade-in animation -->
    <TextView
        android:id="@+id/textAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="120dp"
        android:text="Senate Way Guesthouse"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:alpha="0.0"
        android:shadowColor="@color/white"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4" />

</FrameLayout>

