<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/glass_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/textReviewerInitials"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="JD"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/avatar_background"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textReviewerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:textColor="@color/glass_text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textReviewCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Couple"
                    android:textColor="@color/glass_text_secondary"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="5"
                android:stepSize="1"
                style="?android:attr/ratingBarStyleSmall"
                android:isIndicator="true"
                android:progressTint="#FFD700"
                android:progressBackgroundTint="#E0E0E0"
                android:secondaryProgressTint="#FFD700" />

            <TextView
                android:id="@+id/textReviewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="October 2025"
                android:textColor="@color/glass_text_secondary"
                android:textSize="12sp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:text=""
                android:textColor="@color/primary"
                android:textSize="32sp"
                android:alpha="0.2"
                android:layout_marginStart="-8dp"
                android:layout_marginTop="-8dp" />

            <TextView
                android:id="@+id/textReviewComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Great stay!"
                android:textColor="@color/glass_text_secondary"
                android:textSize="14sp"
                android:lineSpacingMultiplier="1.5"
                android:paddingStart="16dp" />
        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>

